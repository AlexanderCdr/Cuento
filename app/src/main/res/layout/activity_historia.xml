<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cuetoq.licfernando.cuento.controllers.HistoriaActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImagen"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/page0"
        android:adjustViewBounds="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar regreso a la tierra"
        android:id="@+id/btnOpcion1"
        android:layout_above="@+id/btnOpcion2"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detener e investigar"
        android:id="@+id/btnOpcion2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta es una historia que trata sobre las aventuras espaciales que te han sido asignadas por el departamento espacial mexicano."
        android:id="@+id/tvTexto"
        android:layout_below="@+id/ivImagen"
        android:layout_alignParentStart="true"
        android:password="false"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        android:textSize="20dp" />

</RelativeLayout>
