<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ff1e1e1e">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/main_title"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empezar cuento"
        android:id="@+id/btnEmpieza"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tuNombre" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tuNombre"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:hint="Escribe tu nombre"
        android:background="#ff0e0e0e"
        android:textColor="#fff8f8f8"
        android:textColorHint="#ffddd8e6"
        android:paddingLeft="16dp"
        android:paddingTop="8dp" />

</RelativeLayout>
